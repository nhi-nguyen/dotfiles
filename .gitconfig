[push]
	default = upstream
[alias]
    br = branch
    st = status
    ci = commit -v
    co = checkout
    pick = cherry-pick
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
    allgraph = !git graph --all
    logbrief = log --pretty='%H %an - %s'
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[diff]
	tool = meld
[merge]
    tool = meld
[core]
    mergeoptions = --no-commit
    editor = vim
[log]
	date = local
[difftool]
	prompt = false
